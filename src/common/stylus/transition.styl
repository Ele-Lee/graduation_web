  .slide-enter-active, .slide-leave-active
    transition: all 0.5s
  .slide-enter
    transform: translate3d(100%, 0, 0)
  .slide-leave-to
    transform: translate3d(-100%, 0, 0)

  .pop-right-enter-active, .pop-right-leave-active
      transition: all 0.6s
  .pop-right-enter, .pop-right-leave-to
      transform: translate3d(-100%, 0, 0)
